<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/match_list_item_CardView_matchHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical"
        app:cardCornerRadius="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

    <RelativeLayout android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/date"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sampleDate"
                    android:layout_weight="1"
                    android:textSize="@dimen/small_text"
            android:gravity="center_horizontal"/>
            <TextView
                    android:id="@+id/hora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sampleTime"
                    android:layout_weight="1"
                    android:textSize="@dimen/small_text"
            android:gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/resultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/date"
                android:textSize="@dimen/small_text"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin">
            <TextView
                    android:id="@+id/equipo1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sampleName1"
                    android:textSize="@dimen/small_text"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:layout_margin="@dimen/margin"/>
            <TextView
                    android:id="@+id/puntos1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text"
                    android:text="@string/sampleResult"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_margin="@dimen/margin"/>
            <TextView
                    android:id="@+id/puntos2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text"
                    android:text="@string/sampleResult"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_margin="@dimen/margin"/>
            <TextView
                    android:id="@+id/equipo2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sampleName2"
                    android:textSize="@dimen/small_text"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:layout_margin="@dimen/margin"/>

        </LinearLayout>
        <TextView
                android:id="@+id/ganador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gano"
                android:textSize="@dimen/small_text"
                android:layout_margin="@dimen/margin"
                android:gravity="center_horizontal"
                android:layout_below="@id/resultado"/>
    </RelativeLayout>



</androidx.cardview.widget.CardView>